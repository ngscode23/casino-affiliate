{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
     "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/ui/*": ["src/ui/*"],
      "@/data/*": ["src/data/*"]
    },

    "types": ["vite/client", "node", "@netlify/functions"]
  },
  "include": ["src", "netlify/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/db/**","netlify/functions/**"],
}

